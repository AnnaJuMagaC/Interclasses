@{
	ViewData["Title"] = "Página Inicial";
}

<style>
	body {
		background-color: beige;
	}
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="container py-5">

	<div class="text-center mb-5">
		<h1 class="display-4 fw-bold " style="color: darkred;">
			<i class="bi bi-trophy-fill"></i> Sistema de Interclasses <i class="bi bi-trophy-fill"></i>
		</h1>
		<p class="lead text-black">
			Organize e acompanhe esportes, times e campeonatos de forma prática
		</p>
		<a asp-controller="Esportes" asp-action="Index" class="btn btn-lg mt-3 shadow-sm border-danger" style="color: darkred; background-color: papayawhip;">
			Ver Esportes
		</a>
	</div>

	<div class="row g-4 justify-content-center">

		<div class="col-12 col-md-4">
			<div class="card h-100 border-danger shadow-sm hover-shadow" style="background-color: papayawhip">
				<div class="card-body text-center">
					<i class="bi bi-people-fill display-4 mb-3" style="color: darkred;"></i>
					<h5 class="card-title fw-bold">Times</h5>
					<p class="card-text text-black">
						Adicione ou edite times para cada esporte do Interclasse.
					</p>
				</div>
			</div>
		</div>

		<div class="col-12 col-md-4">
			<div class="card h-100 border-danger shadow-sm hover-shadow" style="background-color: papayawhip">
				<div class="card-body text-center">
					<i class="bi bi-person-badge-fill display-4 mb-3" style="color: darkred;"></i>
					<h5 class="card-title fw-bold">Jogadores</h5>
					<p class="card-text text-black">
						Organize jogadores, números e posições de cada time.
					</p>
				</div>
			</div>
		</div>

		<div class="col-12 col-md-4">
			<div class="card h-100 border-danger shadow-sm hover-shadow" style="background-color: papayawhip">
				<div class="card-body text-center">
					<i class="bi bi-calendar-event-fill display-4 mb-3" style="color: darkred;"></i>
					<h5 class="card-title fw-bold">Campeonatos</h5>
					<p class="card-text text-black">
						Crie, edite e acompanhe campeonatos e partidas.
					</p>
				</div>
			</div>
		</div>

	</div>
</div>

<style>
	.hover-shadow:hover {
		transform: translateY(-5px);
		transition: all 0.3s ease-in-out;
		box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
	}
</style>
